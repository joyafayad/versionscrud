@section scripts {
    <script>
        $(document).ready(function () {

            // Load data into the project dropdown
            $.ajax({
                url: '/api/Environment/LoadData',
                type: 'GET',
                success: function(result) {
                    result.projects.forEach(function(project) {
                        // $('#projectId').append('<option value="${project.id}">${project.name}</option>');
                        $('#projectId').append(` <option value="${project.id}">${project.name}</option>`);
                    });
                },
                error: function(xhr, status, error) {
                    console.error(xhr.responseText);
                    alert('Error loading projects: ' + xhr.responseText);
                }
            });

            $('#stripe-login').submit(function (e) {
                e.preventDefault(); // prevent default form submission
                console.log("here");
                var environmentData = {
                    name: $('#environmentName').val(),
                    description: $('#environmentDescription').val(),
                    projectId: $('#projectId').val()
                };

                addEnvironment(environmentData);
            });

            function addEnvironment(environmentData) {
                $.ajax({
                    url: '/api/Environment/Add',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(environmentData),
                    success: function (result) {
                        console.log(result);
                        alert(result.message);
                        location.reload();
                    },
                    error: function (xhr, status, error) {
                        console.error(xhr.responseText);
                        alert('Error adding environment: ' + xhr.responseText);
                    }
                });
            }
        });
    </script>
}