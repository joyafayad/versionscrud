@using VersionsCRUD.Bug
@model BugGetResp
<link rel="stylesheet" href="@Url.Content("~/assets/css/site.css")" type="text/css" />


<div class="row">
    <div class="col-md-6">
        <button class="Add">Add</button>
    </div>
</div>


<table id="example" class=" table table-striped table-bordered">
    <thead>
        <tr>
            <th>Description</th>
            <th>Status</th>
            <th>Reported</th>
            <th> Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bug in Model.bugs)
        {
            <tr>
                <td>@bug.description</td>
                <td>@bug.status</td>
                <td>@bug.reported</td>
                <td>
                    <button>
                        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                    </button>
                </td>
                <td>
                    <button>
                        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 19l9 2-2-9-9-2-9 2 2 9 9 2zm0 0v-8m-4 4h8" />
                        </svg>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
